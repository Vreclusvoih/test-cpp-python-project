{
  "version": 3,
  "configurePresets": [
    {
      "name": "clang-debug",
      "displayName": "Clang 18 Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/clang-debug", 
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/home/loiter/libclang/libclang/bin/clang",
        "CMAKE_CXX_COMPILER": "/home/loiter/libclang/libclang/bin/clang++",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "clang-release",
      "displayName": "Clang 18 Release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/clang-release", 
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/home/loiter/libclang/libclang/bin/clang",
        "CMAKE_CXX_COMPILER": "/home/loiter/libclang/libclang/bin/clang++",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "gcc-debug",  
      "displayName": "GCC Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/gcc-debug", 
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/usr/bin/gcc",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "gcc-release", 
      "displayName": "GCC Release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/gcc-release", 
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/usr/bin/gcc",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "clang-debug",
      "configurePreset": "clang-debug"
    },
    {
      "name": "clang-release",
      "configurePreset": "clang-release" 
    },
    {
      "name": "gcc-debug",
      "configurePreset": "gcc-debug"  
    },
    {
      "name": "gcc-release",
      "configurePreset": "gcc-release"  
    }
  ]
}